<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/nav_home">

    <fragment
            android:id="@+id/nav_home"
            android:name="com.wornux.chatzam.ui.home.HomeFragment"
            android:label="@string/menu_home"
            tools:layout="@layout/fragment_home">
        <action
                android:id="@+id/action_nav_home_to_nav_chat"
                app:destination="@id/nav_chat" />
        <action
                android:id="@+id/action_nav_home_to_nav_group_creation"
                app:destination="@id/nav_group_creation" />
    </fragment>

    <fragment
            android:id="@+id/nav_chat"
            android:name="com.wornux.chatzam.presentation.fragments.ChatFragment"
            android:label="Chat"
            tools:layout="@layout/fragment_chat">
        <argument
                android:name="chat_id"
                app:argType="string" />
    </fragment>

    <fragment
            android:id="@+id/nav_group_creation"
            android:name="com.wornux.chatzam.presentation.fragments.GroupCreationFragment"
            android:label="Create Group"
            tools:layout="@layout/fragment_group_creation" />

    <fragment
            android:id="@+id/nav_gallery"
            android:name="com.wornux.chatzam.ui.gallery.GalleryFragment"
            android:label="@string/menu_gallery"
            tools:layout="@layout/fragment_gallery"/>

    <fragment
            android:id="@+id/nav_slideshow"
            android:name="com.wornux.chatzam.ui.slideshow.SlideshowFragment"
            android:label="@string/menu_slideshow"
            tools:layout="@layout/fragment_slideshow"/>

    <fragment
            android:id="@+id/nav_user_profile"
            android:name="com.wornux.chatzam.presentation.fragments.UserProfileFragment"
            android:label="Profile"
            tools:layout="@layout/fragment_user_profile" />

    <fragment
            android:id="@+id/nav_settings"
            android:name="com.wornux.chatzam.presentation.fragments.SettingsFragment"
            android:label="Settings"
            tools:layout="@layout/fragment_settings" />
</navigation>