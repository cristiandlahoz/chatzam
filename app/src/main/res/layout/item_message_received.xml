<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:paddingStart="8dp"
    android:paddingEnd="64dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/senderProfileImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_launcher_foreground"
        app:civ_border_color="@color/text_color_secondary"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/messageText" />

    <ImageView
        android:id="@+id/messageImage"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:contentDescription="@string/send_image"
        android:adjustViewBounds="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@+id/senderProfileImage"
        app:layout_constraintEnd_toStartOf="@+id/marginSpacer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"
        tools:src="@drawable/ic_image" />

    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/message_received_background"
        android:paddingStart="59dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp"
        android:lineSpacingExtra="2dp"
        android:fontFamily="sans-serif"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@+id/senderProfileImage"
        app:layout_constraintEnd_toStartOf="@+id/marginSpacer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/messageImage"
        tools:text="This is a received message with some longer text to test wrapping" />

    <Space
        android:id="@+id/marginSpacer"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/messageText"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/timestampText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="3dp"
        android:maxLines="1"
        android:textColor="@color/text_color_secondary"
        android:textSize="12sp"
        android:alpha="0.8"
        app:layout_constraintStart_toStartOf="@+id/messageText"
        app:layout_constraintBottom_toBottomOf="@+id/messageText"
        tools:text="14:30" />

</androidx.constraintlayout.widget.ConstraintLayout>